  <script>
    const products = [
      { id: 1, name: 'Teclado MecÃ¡nico RGB', price: 24000, used: false },
      { id: 2, name: 'Mouse Gamer 7200DPI', price: 12000, used: true },
      { id: 3, name: 'Monitor LED 24" Full HD', price: 58000, used: false },
      { id: 4, name: 'Auriculares con micrÃ³fono', price: 15000, used: true },
    ];

    const productList = document.getElementById('product-list');
    const cart = document.getElementById('cart');
    const checkoutLink = document.getElementById('checkoutLink');
    const cartItems = [];

    function updateCart() {
      cart.innerHTML = '';
      cartItems.forEach(item => {
        const li = document.createElement('li');
        li.className = 'list-group-item';
        li.textContent = `${item.name} - $${item.price}`;
        cart.appendChild(li);
      });
    }

    products.forEach(product => {
      const col = document.createElement('div');
      col.className = 'col-md-6 col-lg-4';
      const card = document.createElement('div');
      card.className = 'product-card';

      card.innerHTML = `
        <h5>${product.name}</h5>
        <p class="text-${product.used ? 'warning' : 'success'} fw-bold">
          ${product.used ? 'Producto usado (calidad garantizada)' : 'Producto nuevo'}
        </p>
        <p><strong>$${product.price}</strong></p>
        <button class="btn btn-primary btn-sm">Agregar al carrito</button>
      `;

      card.querySelector('button').addEventListener('click', () => {
        cartItems.push(product);
        updateCart();
      });

      col.appendChild(card);
      productList.appendChild(col);
    });

    checkoutLink.addEventListener('click', () => {
      alert('Â¡Gracias por tu compra! PodÃ©s pagar en el enlace que se abrirÃ¡.');
      checkoutLink.href = `https://www.mercadopago.com.ar`; // ReemplazÃ¡ con tu link real
    });
  </script>
